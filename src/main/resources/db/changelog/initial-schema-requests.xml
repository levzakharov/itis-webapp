<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-requests-0" author="r.khakov">
        <createTable tableName="requests">
            <column name="id" type="bigint"/>
            <column name="theme" type="varchar(255)"/>
            <column name="text" type="TEXT"/>
            <column name="date" type="TIMESTAMP"/>
            <column name="user_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-requests-1" author="r.khakov">
        <addPrimaryKey tableName="requests"
                       columnNames="id"
                       constraintName="requests_pk"/>
    </changeSet>

    <changeSet id="initial-schema-requests-2" author="r.khakov">
        <createSequence sequenceName="requests_seq"
                        startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>