<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-request-0" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="request"/>
            </not>
        </preConditions>

        <createTable tableName="request">
            <column name="id" type="bigint"/>
            <column name="theme" type="varchar(255)"/>
            <column name="text" type="TEXT"/>
            <column name="date" type="TIMESTAMP"/>
            <column name="user_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-request-1" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists primaryKeyName="request_pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="request"
                       columnNames="id"
                       constraintName="request_pk"/>
    </changeSet>

    <changeSet id="initial-schema-request-2" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="request_seq"/>
            </not>
        </preConditions>

        <createSequence sequenceName="request_seq"
                        startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>