<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-user-0" author="r.khakov">
        <createTable tableName="user">
            <column name="id" type="bigint"/>
            <column name="email" type="varchar(50)"/>
            <column name="phone" type="varchar(50)"/>
            <column name="full_name" type="varchar(255)"/>
            <column name="password" type="varchar(100)"/>
            <column name="group_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-user-1" author="r.khakov">
        <addPrimaryKey tableName="user"
                       columnNames="id"
                       constraintName="user_pk"/>
    </changeSet>

    <changeSet id="initial-schema-user-2" author="r.khakov">
        <createSequence sequenceName="user_seq"
                        startValue="1"
                        incrementBy="1"/>
    </changeSet>

    <changeSet id="initial-schema-user-3" author="e.akhmetshin">
        <renameTable oldTableName="user" newTableName="users"/>
        <addNotNullConstraint tableName="users" columnName="email"/>
        <addUniqueConstraint tableName="users" columnNames="email"/>
        <addNotNullConstraint tableName="users" columnName="full_name"/>
        <addNotNullConstraint tableName="users" columnName="password"/>
    </changeSet>
</databaseChangeLog>
