<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-user-notification-0" author="al.leontyev">
        <preConditions>
            <not>
                <tableExists tableName="user_notification"/>
            </not>
        </preConditions>

        <createTable tableName="user_notification">
            <column name="user_id" type="bigint"/>
            <column name="notification_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-user-notification-1" author="al.leontyev">
        <preConditions>
            <not>
                <primaryKeyExists primaryKeyName="user_notification_pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="user_notification"
                       columnNames="user_id, notification_id"
                       constraintName="user_notification_pk"/>
    </changeSet>
</databaseChangeLog>