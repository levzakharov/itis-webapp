<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-groups-0" author="r.khakov">
        <createTable tableName="groups">
            <column name="id" type="bigint"/>
            <column name="number" type="varchar(12)"/>
            <column name="start_year" type="DATE"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-groups-1" author="r.khakov">
        <addPrimaryKey tableName="groups"
                       columnNames="id"
                       constraintName="groups_pk"/>
    </changeSet>

    <changeSet id="initial-schema-groups-2" author="r.khakov">
        <createSequence sequenceName="groups_seq"
                        startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>