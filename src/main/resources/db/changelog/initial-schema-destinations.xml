<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-destinations-0" author="r.khakov">
        <createTable tableName="destinations">
            <column name="id" type="bigint"/>
            <column name="notification_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-destinations-1" author="r.khakov">
        <addPrimaryKey tableName="destinations"
                       columnNames="id"
                       constraintName="destinations_pk"/>
    </changeSet>

    <changeSet id="initial-schema-destinations-2" author="r.khakov">
        <createSequence sequenceName="destinations_seq"
                        startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>