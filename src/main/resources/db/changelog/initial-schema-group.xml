<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-group-0" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="group"/>
            </not>
        </preConditions>

        <createTable tableName="group">
            <column name="id" type="bigint"/>
            <column name="number" type="varchar(12)"/>
            <column name="start_year" type="DATE"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-group-1" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists primaryKeyName="group_pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="group"
                       columnNames="id"
                       constraintName="group_pk"/>
    </changeSet>

    <changeSet id="initial-schema-group-2" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="group_seq"/>
            </not>
        </preConditions>

        <createSequence sequenceName="group_seq"
                        startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>