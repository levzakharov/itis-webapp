<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-destination-0" author="r.khakov">
        <createTable tableName="destination">
            <column name="id" type="bigint"/>
            <column name="notification_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-destination-1" author="r.khakov">
        <addPrimaryKey tableName="destination"
                       columnNames="id"
                       constraintName="destination_pk"/>
    </changeSet>

    <changeSet id="initial-schema-destination-2" author="r.khakov">
        <createSequence sequenceName="destination_seq"
                        startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>