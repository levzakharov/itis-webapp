<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-users-destinations-0" author="al.leontyev">
        <createTable tableName="users_destinations">
            <column name="user_id" type="bigint"/>
            <column name="destination_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-users-destinations-1" author="al.leontyev">
        <addPrimaryKey tableName="users_destinations"
                       columnNames="user_id, destination_id"
                       constraintName="users_destinations_pk"/>
    </changeSet>
</databaseChangeLog>