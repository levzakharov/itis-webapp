<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-documents-0" author="r.khakov">
        <createTable tableName="documents">
            <column name="id" type="bigint"/>
            <column name="user_id" type="bigint"/>
            <column name="name" type="varchar(255)"/>
            <column name="path" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-documents-1" author="r.khakov">
        <addPrimaryKey tableName="documents"
                       columnNames="id"
                       constraintName="documents_pk"/>
    </changeSet>

    <changeSet id="initial-schema-documents-2" author="r.khakov">
        <createSequence sequenceName="documents_seq"
                        startValue="1"
                        incrementBy="1"/>
    </changeSet>
</databaseChangeLog>
