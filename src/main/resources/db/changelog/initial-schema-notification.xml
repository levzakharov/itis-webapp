<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-notification-0" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="notification"/>
            </not>
        </preConditions>

        <createTable tableName="notification">
            <column name="id" type="bigint"/>
            <column name="user_id" type="bigint"/>
            <column name="theme" type="varchar(255)"/>
            <column name="text" type="text"/>
            <column name="date" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-notification-1" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists primaryKeyName="notification_pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="notification"
                       columnNames="id"
                       constraintName="notification_pk"/>
    </changeSet>

    <changeSet id="initial-schema-notification-2" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="notification_seq"/>
            </not>
        </preConditions>

        <createSequence sequenceName="notification_seq"
                        startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>