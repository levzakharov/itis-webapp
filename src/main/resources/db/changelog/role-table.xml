<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="0" author="al.pliskin">
        <createTable tableName="role">
            <column name="id" type="bigint"/>
            <column name="type" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="1" author="al.pliskin">
        <addPrimaryKey tableName="role" columnNames="id"/>
    </changeSet>

    <changeSet id="2" author="al.pliskin">
        <createSequence sequenceName="role_seq"
                        startValue="50" incrementBy="1"/>
    </changeSet>

</databaseChangeLog>