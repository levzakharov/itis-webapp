<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-event-0" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="event"/>
            </not>
        </preConditions>

        <createTable tableName="event">
            <column name="id" type="bigint"/>
            <column name="number" type="varchar(255)"/>
            <column name="description" type="TEXT"/>
            <column name="date" type="TIMESTAMP"/>
            <column name="place" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-event-1" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists primaryKeyName="event_pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="event"
                       columnNames="id"
                       constraintName="event_pk"/>
    </changeSet>

    <changeSet id="initial-schema-event-2" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="event_seq"/>
            </not>
        </preConditions>

        <createSequence sequenceName="event_seq"
                        startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>