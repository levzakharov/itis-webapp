<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-document-post-0" author="al.leontyev">
        <preConditions>
            <not>
                <tableExists tableName="document_post"/>
            </not>
        </preConditions>

        <createTable tableName="document_post">
            <column name="document_id" type="bigint"/>
            <column name="post_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-document-post-1" author="al.leontyev">
        <preConditions>
            <not>
                <primaryKeyExists primaryKeyName="document_post_pk"/>
            </not>
        </preConditions>
        <addPrimaryKey tableName="document_post"
                       columnNames="document_id, post_id"
                       constraintName="document_post_pk"/>
    </changeSet>
</databaseChangeLog>