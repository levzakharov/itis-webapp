<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-role-user-0" author="al.leontyev">
        <createTable tableName="role_user">
            <column name="user_id" type="bigint"/>
            <column name="role_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-role-user-1" author="al.leontyev">
        <addPrimaryKey tableName="role_user"
                       columnNames="user_id, role_id"
                       constraintName="role_user_pk"/>
    </changeSet>
</databaseChangeLog>