<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="initial-schema-post-0" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="post"/>
            </not>
        </preConditions>

        <createTable tableName="post">
            <column name="id" type="bigint"/>
            <column name="title" type="varchar(255)"/>
            <column name="text" type="text"/>
            <column name="date" type="TIMESTAMP"/>
            <column name="user_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="initial-schema-post-1" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists primaryKeyName="post_pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="post"
                       columnNames="id"
                       constraintName="post_pk"/>
    </changeSet>

    <changeSet id="initial-schema-post-2" author="r.khakov">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="post_seq"/>
            </not>
        </preConditions>

        <createSequence sequenceName="post_seq"
                        startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>